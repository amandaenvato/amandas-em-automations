{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "Simple menu bar task manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "kill": "pkill -f 'task-manager/node_modules.*Electron' || pkill -f 'task-manager.*electron' || true",
    "restart": "npm run kill && sleep 1 && npm start"
  },
  "keywords": ["electron", "menu-bar", "tasks"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "menubar": "^9.5.2"
  },
  "devDependencies": {
    "electron": "^28.0.0"
  }
}

